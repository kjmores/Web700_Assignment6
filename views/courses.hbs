<div class="row">
  <div class="col-md-12">
    <br>
    <h2>Courses</h2>
    <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
    <hr />
    <br>

    {{#unless courses}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{else}}
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Course ID</th>
              <th>Course Code</th>
              <th>Course Description</th>
              <th></th> <!-- Empty column for Remove links -->
            </tr>
          </thead>
          <tbody>
            {{#each courses}}
              <tr>
                <td>{{this.courseId}}</td>
                <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                <td><a href="/course/{{this.courseId}}">{{this.courseDescription}}</a></td>
                <td>
                  <a href="/course/delete/{{this.courseId}}" class="btn btn-danger">Remove</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{/unless}}
  </div>
</div>
